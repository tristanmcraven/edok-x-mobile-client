<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FoodCountStyle">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrderMCVStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="cardBackgroundColor">@color/white</item>
<!--        <item name="cardElevation">20dp</item>-->
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="TextViewTickStyle">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="WhiteButtonStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageButtonGoBackStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:src">@drawable/arrow_left</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextViewTopBarStyle">
        <item name="android:layout_marginStart">-55dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="YellowButtonStyle">
        <item name="android:backgroundTint">@color/yellow_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>